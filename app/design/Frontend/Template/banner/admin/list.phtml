            <div class="site-blocks-table">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="product-thumbnail">Id</th>
                            <th class="product-name">Image</th>
                            <th class="product-price">Status</th>
                            <th class="product-price">UPDATE</th>
